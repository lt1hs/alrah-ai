[Unit]
Description=Alrah AI Telegram Bot
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/root/tel-projcets/alrah-ai
Environment=PATH=/root/tel-projcets/alrah-ai/venv/bin
ExecStart=/root/tel-projcets/alrah-ai/venv/bin/python bot.py
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
